---
import ContentPage from '../layouts/ContentPage.astro';
import LinkCard from '../components/LinkCard.astro';
---

<ContentPage>
	<ul role="list" class="link-card-grid">
		<LinkCard
			href="/tools/calendar"
			title="Calendar"
			body="Sync your schedule from REGIS with any calendar."
		/>
		<LinkCard
			href="/tools/todo"
			title="Todo"
			body="Sync your Canvas assignments with Google Tasks."
		/>
	</ul>
</ContentPage>

<style>
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
